<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:padding="0dip" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/lib_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="#EEFFFFFF"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="1dip"
        android:layout_alignParentLeft="true">

        <!-- title left -->

        <LinearLayout
            android:id="@+id/lib_title_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/title_layout_press_drawable"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:paddingRight="15dip" 
            android:paddingLeft="15dip"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/lib_title_left_icon"
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:layout_marginRight="5dip"
                android:background="@mipmap/left_blue_arrow"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lib_title_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dip"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_big"
                android:visibility="visible" />
        </LinearLayout>

        <!-- title middle -->

        <LinearLayout
            android:id="@+id/lib_title_middle_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="0dip"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/lib_title_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:maxEms="10"
                android:gravity="center"
                android:padding="0dip"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_big" />
        </LinearLayout>

        <!-- title right -->

        <LinearLayout
            android:id="@+id/lib_title_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/title_layout_press_drawable"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/lib_title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dip"
                android:singleLine="true"
                android:text="下一步"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:id="@+id/lib_title_right_icon"
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:layout_marginLeft="5dip"
                android:background="@mipmap/right_blue_arrow"
                android:scaleType="centerInside" />
        </LinearLayout>
    </RelativeLayout>
    
    <!-- 横线 -->
    <View
        android:id="@+id/lib_title_line"
        android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="#22000000" />
    <!-- 内容区 -->

    <LinearLayout
        android:id="@+id/lib_title_main_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="0dip" >
    </LinearLayout>

</LinearLayout>